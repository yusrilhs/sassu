# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.js]
# Set default charset
charset = utf-8
# 4 space indentation
indent_style = space
indent_size = 4

# Matches the exact files either package.json, .travis.yml and .sassurc
[{package.json,.travis.yml,.sassurc}]
indent_style = space
indent_size = 2
